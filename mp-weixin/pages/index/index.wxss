
page{ background: #F5F5F5;
}
.headNav{ 
	width: 100%;
	background: #FFFFFF;
	white-space: nowrap; 
	position: fixed;
	top: 0;
	left: 0;
	z-index: 15;
	border-bottom: 1px #F2F2F2 solid;
}
.headNavBox{ width: 92%;margin: 0 auto;
}
.headNavLt{	display: inline-block;height: 100rpx;line-height: 100rpx;font-size: 30rpx;margin-right: 30rpx;
}
.headNavLt:last-child{ margin-right: 0;
}
.activeNav{ color: #3B7ED5;
}
.swiper{  height: 307rpx;
}
.swiper-item image{ width: 100%;height: 307rpx;display: block;
}
.idxMain{ width: 100%;padding-top: 100rpx;
}
.idxMainBox{ width: 92%;margin: 0 auto;
}
.contBg{ background: #FFFFFF;overflow: hidden;margin-bottom: 30rpx;
}
.contOver{ border-bottom: 1px #EDEDED solid;overflow: hidden;-webkit-transition: all 0.4s;-o-transition: all 0.4s;transition: all 0.4s;
}
.contOver:active{ background: #E2E2E2;
}
.contOver:last-child{ border-bottom: none;
}
.contOverLt{ float: left;width: 60%;
}
.contTxt{
	color: #333333;
	font-size: 30rpx;
	width: 100%;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp:2;
	-webkit-box-orient:vertical;
	overflow: hidden;
	padding-top: 30rpx;
}
.contTime{ color: #888888;font-size: 24rpx;margin-top: 30rpx;
}
.contRtImg{ float: right;width: 35%;height: 155rpx;margin: 30rpx 0;
}
.contRtImg image{ width: 100%;height: 100%;display: block;border-radius: 6rpx;
}
.contTitle{ background: #FFFFFF;font-size: 30rpx;color: #3B7ED5;height: 80rpx;line-height: 80rpx;border-bottom: 1px #F5F5F5 solid;
}
.shopOver{ overflow: hidden;margin-bottom: 30rpx;
}
.shopLt{ 
	float: left;
	width: 48.5%;
	background: #FFFFFF;
	height: 360rpx;
	border: 1px #F2F2F2 solid;
	border-radius: 12rpx;
	-webkit-transition: all 0.4s;
	-o-transition: all 0.4s;
	transition: all 0.4s;
	margin-top: 15rpx;
}
.shopLt:nth-child(2n){ float: right;
}
.shopLt:active{ background: #E2E2E2;
}
.shopImg{ height: 220rpx;
}
.shopImg image{ width: 100%;height: 100%;display: block;border-radius: 12rpx 12rpx 0 0;
}
.shopTxt{ font-size: 28rpx;color: #333333;padding: 20rpx 20rpx 0 20rpx;display:block;white-space:nowrap; overflow:hidden; -o-text-overflow:ellipsis; text-overflow:ellipsis;
}
.shopMoney{ padding: 0 20rpx;
}
.shopMoney text{ font-size: 26rpx;color: red;
}
.shopMoney text:last-child{ color: #aaaaaa;
}
.newsOver{ border-bottom: 1px #F5F5F5 solid;-webkit-transition: all 0.4s;-o-transition: all 0.4s;transition: all 0.4s;
}
.newsOver:active{ background: #E2E2E2;
}
.newsOver:last-child{ border-bottom: none;
}
.newsTitle{ 
	font-size: 30rpx;
	color: #333333;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp:3;
	-webkit-box-orient:vertical;
	overflow: hidden;
	padding: 30rpx 0 20rpx 0;
	text-align: justify;
}
.newsImg{ height: 360rpx;border: 1px #F5F5F5 solid;
}
.newsImg image{ width: 100%;height: 100%;display: block;
}
.newsTime{ overflow: hidden;padding: 20rpx 0 30rpx 0;
}
.newsTime text{ font-size: 26rpx;color: #AAAAAA;float: left;
}
.newsTime text:last-child{ float: right;
}


